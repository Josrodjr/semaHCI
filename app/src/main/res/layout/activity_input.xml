<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.microsoft.projectoxford.visionsample.InputActivity">

    <Spinner
        android:id="@+id/spinnerS"
        android:layout_width="89dp"
        android:layout_height="38dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView4" />

    <Spinner
        android:id="@+id/spinnerA"
        android:layout_width="90dp"
        android:layout_height="38dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView7" />

    <Spinner
        android:id="@+id/spinnerGR"
        android:layout_width="91dp"
        android:layout_height="38dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView5" />

    <Spinner
        android:id="@+id/spinnerG"
        android:layout_width="89dp"
        android:layout_height="38dp"

        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/EnergyInput"
        android:layout_marginTop="19dp"
        android:text="Grasas"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textSize="10pt"
        android:fontFamily="@font/roboto"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="36dp"
        android:text="Energía"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" android:textSize="10pt"
        android:fontFamily="@font/roboto"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/SaltInput"
        android:layout_alignBottom="@+id/SaltInput"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:text="Sal"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textSize="10pt"
        android:fontFamily="@font/roboto"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/SugarInput"
        android:layout_alignBottom="@+id/SugarInput"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:text="Azúcares"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textSize="10pt"
        android:fontFamily="@font/roboto"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/SaturatedInput"
        android:layout_alignBottom="@+id/SaturatedInput"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:text="Grasas Saturadas"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textSize="10pt"
        android:fontFamily="@font/roboto"/>

    <EditText
        android:id="@+id/EnergyInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:hint="Energía"
        android:inputType="numberDecimal"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/FatInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/EnergyInput"
        android:layout_alignStart="@+id/EnergyInput"
        android:ems="10"
        android:hint="Grasas"
        android:inputType="numberDecimal"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/SaturatedInput"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/EnergyInput"
        android:layout_marginStart="58dp"
        android:layout_marginTop="141dp"
        android:ems="10"
        android:hint="Grasas Saturadas"
        android:inputType="numberDecimal"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/SugarInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/EnergyInput"
        android:layout_marginTop="196dp"
        android:ems="10"
        android:hint="Azúcares"
        android:inputType="numberDecimal"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/SaltInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/EnergyInput"
        android:layout_marginBottom="226dp"
        android:ems="10"
        android:hint="Sal"
        android:inputType="numberDecimal"
        android:textSize="12sp" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/button"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp"
        android:text="Resultados"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="10pt"
        android:fontFamily="@font/roboto"
        android:background="@layout/rounded_button_settings"
        />

    <Spinner
        android:id="@+id/spinnerE"
        android:layout_width="91dp"
        android:layout_height="38dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView" />

</android.widget.RelativeLayout>
